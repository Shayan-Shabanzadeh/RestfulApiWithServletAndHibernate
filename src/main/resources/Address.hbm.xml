<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.example.usermanagment.bean.Address" table="address">
        <id name="id" type="java.lang.Long" column="id">
            <generator class="native"/>
        </id>
        <property name="address" column="UserAddress" type="string"/>
<!--        <many-to-one name="user" column="user_id" class="com.example.usermanagment.bean.User"/>-->
    </class>
</hibernate-mapping>